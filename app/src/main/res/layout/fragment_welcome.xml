<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeFragment">

        <EditText
            android:id="@+id/EditTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="180dp"
            android:padding="6dp"
            android:background="@drawable/custom_input"
            android:layout_marginEnd="40dp"
            android:hint="name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp"></EditText>


        <Button
            android:id="@+id/btnNext"
            android:layout_gravity="center_horizontal"
            style="@style/btnStyle"
            android:layout_height="70dp"
            android:textSize="36sp"
            android:layout_marginTop="400dp"
            android:inputType="text"
            android:text="Continue"
            android:textColor="@color/biela"
            app:strokeColor="@color/strokeColor"
            app:strokeWidth="6dp"></Button>

        <Button
            android:id="@+id/btnAddVoice"
            style="@style/btnStyle"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="500dp"
            android:inputType="text"
            android:text="Add voice"
            android:textColor="@color/biela"
            android:textSize="36sp"
            app:strokeColor="@color/strokeColor"
            app:strokeWidth="6dp"></Button>

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="40dp"

            android:ems="10"
            android:padding="6dp"
            android:hint="number"
            android:inputType="number"
            android:shadowColor="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_pozadiefakecall2_1" />

        <ImageView
            android:id="@+id/imagePhone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/ic_ring_volume_white_24dp" />

    </FrameLayout>
</layout>